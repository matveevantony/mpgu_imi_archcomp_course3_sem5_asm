; -------------------------------------------------------------------------------
; макрос сложения двух чисел размером один байт
; ограничения: второе слагаемое не должно быть AL
; результат: AL
; -------------------------------------------------------------------------------
libadd macro a, b
	mov AL, a
	add AL, b
endm

; -------------------------------------------------------------------------------
; макрос вычитания одного числа размером один байт из другого
; ограничения: вычитаемое не должно быть AL
; результат: AL
; -------------------------------------------------------------------------------
libsub macro a, b
    mov AL, a
    sub AL, b
endm

; -------------------------------------------------------------------------------
; макрос умножения двух чисел размером один байт (без знака)
; ограничения: второй множитель не должен быть AL
; результат: AX
; -------------------------------------------------------------------------------
libmul macro a, b
    mov AL, a
    mul b
endm

; -------------------------------------------------------------------------------
; макрос умножения двух чисел размером один байт (со знаком)
; ограничения: второй множитель не должен быть AL
; результат: AX
; -------------------------------------------------------------------------------
libimul macro a, b
    mov AL, a
    imul b
endm

; -------------------------------------------------------------------------------
; макрос деления числа размером два байта на число размером один байт (без знака)
; ограничения: делитель не должен быть AH или AL
; результат: AL
; -------------------------------------------------------------------------------
libdiv macro a, b
    mov AX, a
    div b
endm

; -------------------------------------------------------------------------------
; макрос деления числа размером два байта на число размером один байт (со знаком)
; ограничения: делитель не должен быть AH или AL
; результат: AL
; -------------------------------------------------------------------------------
libidiv macro a, b
    mov AX, a
    idiv b
endm